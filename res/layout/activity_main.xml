<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android1="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity" >

    <LinearLayout
        android1:layout_width="match_parent"
        android1:layout_height="wrap_content" >

        <Button
            android1:id="@+id/settings"
            android1:layout_width="wrap_content"
            android1:layout_height="wrap_content"
            android1:text="@string/settings" />

        <Button
            android1:id="@+id/clearList"
            android1:layout_width="match_parent"
            android1:layout_height="wrap_content"
            android1:text="@string/clear_list" />

    </LinearLayout>

    <ListView
        android1:id="@+id/screenshotsURLs"
        android1:layout_width="match_parent"
        android1:layout_height="wrap_content"
        android1:fitsSystemWindows="false"
        android1:headerDividersEnabled="false" >

    </ListView>

</LinearLayout>
